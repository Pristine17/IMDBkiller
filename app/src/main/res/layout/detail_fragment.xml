<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:id="@+id/mMovieNameView"
        android:gravity="center_vertical"
        android:paddingLeft="22dp"
        android:layout_marginBottom="10dp"
        android:textSize="48sp"
        android:textColor="#ffff"
        android:layout_weight="10"
        android:background="#009688"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"

        android:layout_weight="2"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mIconView"
            android:src="@drawable/ic_launcher"
            android:scaleType="center"
            android:layout_weight="1"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mReleaseDateView"
                android:paddingTop="10dp"
                android:paddingLeft="24dp"
                android:fontFamily="sans-serif-condensed"
                android:textAppearance="?android:textAppearanceLarge"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mDurationView"
                android:paddingTop="10dp"
                android:paddingLeft="24dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mVoteAvgView"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="24dp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mFavoriteButton"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="12dp"
                android:text="mark as favorite"
                />

            <Button
                android:layout_width="wrap_content"
                android:id="@+id/TrailerButton"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:text="View Trailer"
                />


        </LinearLayout>


    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mPlotSynopsis"
        android:textSize="14sp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"

        />






</LinearLayout>
</ScrollView>